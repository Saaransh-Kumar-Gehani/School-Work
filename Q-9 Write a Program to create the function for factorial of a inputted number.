def factorial(n):
    return 1 if n in (0,1) else n * factorial(n-1)
print("The factorial is", factorial(int(input("Enter the number:"))))

##OR

def fact(n):
    if n in (0,1):
        return 1
    else:
        pro = 1
        for i in range(1, n+1):
            pro = pro * i
        return pro
print("The factorial is", fact(int(input("Enter the number:"))))
